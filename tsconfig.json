{
  "compilerOptions": {
    "target": "es2024",
    "module": "commonjs",
    "baseUrl": "./src",
    "outDir": "./dist",
    "paths": {
      "@exceptions/*": ["exceptions/*"],
      "@helpers/*": ["helpers/*"],
      "@http/*": ["http/*"],
      "@middlewares/*": ["middlewares/*"],
      "@parsers/*": ["parsers/*"],
      "@routing/*": ["routing/*"],
      "@server/*": ["server/*"],
      "@sessions/*": ["sessions/*"],
      "@static/*": ["static/*"],
      "@types/*": ["types/*"],
      "@validators/*": ["validators/*"],
      "@views/*": ["views/*"]
    },
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "incremental": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": false,
    "strictBindCallApply": false,
    "noFallthroughCasesInSwitch": false
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"],
  "ts-node": {
    "files": true
  }
}